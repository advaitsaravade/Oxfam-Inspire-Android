<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="3dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="-5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/draft_image">

        <RelativeLayout
            android:id="@+id/proj_details_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#B30064" >
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                android:id="@+id/vID" />
            <ImageView 
                android:id="@+id/project_cover_img"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:src="@drawable/draft_image"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                />
            
            <org.oxfamindia.oxfamindiafundraiser.CustomTextView2
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Project Title"
        android:textColor="#FFF"
        android:textSize="24sp"
        android:padding="20dp"
        android:layout_below="@id/project_cover_img"
        android:background="#E70052" />
            <RelativeLayout
                android:id="@+id/card_view_txtholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#6A5695"
                android:layout_below="@id/title"
                android:layout_marginTop="5dp" >
           <org.oxfamindia.oxfamindiafundraiser.CustomTextView
               android:id="@+id/brief"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="This is space to write a brief introduction about the project eh? Great place to .."
               android:textColor="#F2F2EA"
               android:textSize="17sp"
               android:paddingLeft="20dp"
               android:paddingRight="20dp"
               android:paddingTop="13dp" />
           <TextView
               android:id="@+id/category"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@id/brief"
               android:paddingLeft="20dp"
               android:paddingRight="20dp"
               android:paddingBottom="20dp"
               android:paddingTop="13dp"
               android:text="EDUCATION"
               android:textColor="#E5E5DD"
               android:textSize="15sp" />
           </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
    </RelativeLayout>