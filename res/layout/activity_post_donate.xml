<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.oxfamindia.oxfamindiafundraiser.PostDonateActivity"
    android:background="@drawable/rounded_white_rect" >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true" >
    <org.oxfamindia.oxfamindiafundraiser.CustomTextView2
        android:id="@+id/stl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share the love. Tell a friend."
        android:padding="15dp"
        android:textSize="25sp"
        android:textColor="@color/primary_dark" />
    
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/stl"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="12dp" >
    
        <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fb_share"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        card_view:cardBackgroundColor="#3b5998"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="3dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="3dp" >

    <TextView android:id="@+id/fb_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8.5dp"
            android:paddingBottom="8.5dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="#FFF"
            android:text="FACEBOOK" />

</android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/twit_share"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        card_view:cardBackgroundColor="#33ccff"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="3dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="3dp" >

    <TextView android:id="@+id/twit_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8.5dp"
            android:paddingBottom="8.5dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="#FFF"
            android:text="TWEET" />

</android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/gplus_share"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        card_view:cardBackgroundColor="#db4a39"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="3dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="3dp" >

    <TextView android:id="@+id/gplus_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8.5dp"
            android:paddingBottom="8.5dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="#FFF"
            android:text="GOOGLE+" />

</android.support.v7.widget.CardView>

<android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/others_share"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        card_view:cardBackgroundColor="#9E9E9E"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="3dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="3dp" >

    <TextView android:id="@+id/othersshare_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8.5dp"
            android:paddingBottom="8.5dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="#FFF"
            android:text="OTHERS" />

</android.support.v7.widget.CardView>

    </LinearLayout>
</RelativeLayout>
</RelativeLayout>
