<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="org.oxfamindia.oxfamindiafundraiser.IndividualProjectsActivity"
    android:background="#B30064" >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/hero_image"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:scaleType="centerCrop"
        android:src="@drawable/draft_image" />
    <RelativeLayout
        android:id="@+id/mast_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="#E70052"
        android:layout_below="@id/hero_image" >
        
        <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/donate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#FFF"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="3dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" >

    <TextView android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8.5dp"
            android:paddingBottom="8.5dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="#E70052"
            android:text="GIVE ₹100" />

</android.support.v7.widget.CardView>
        
    <org.oxfamindia.oxfamindiafundraiser.CustomTextView2
        android:id="@+id/proj_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/donate_button"
        android:textSize="25sp"
        android:textColor="#FFF"
        android:text="Project Title Here"
        android:paddingRight="15dp" />
    <org.oxfamindia.oxfamindiafundraiser.CustomTextView2
        android:id="@+id/proj_categ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/proj_title"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="#E5E5DD"
        android:text="Project Category Here"
        android:paddingRight="15dp"
        android:visibility="gone" />
    
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mast_container"
        android:layout_marginTop="5dp"
        android:background="#6A5695">
    <org.oxfamindia.oxfamindiafundraiser.CustomTextView2
        android:id="@+id/proj_impact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textSize="22sp"
        android:textColor="#FFF"
        android:text="How your ₹100 helps" />
    
    <org.oxfamindia.oxfamindiafundraiser.CustomTextView
       android:id="@+id/proj_impact_brief_desc"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:paddingLeft="15dp"
       android:paddingRight="5dp"
       android:paddingBottom="15dp"
       android:textColor="#E5E5DD"
       android:textSize="25sp"
       android:text="₹100 = 1"
       android:layout_below="@id/proj_impact"
       android:gravity="center" />
    
    <org.oxfamindia.oxfamindiafundraiser.CustomTextView
       android:id="@+id/proj_impact_desc"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:paddingLeft="5dp"
       android:paddingRight="15dp"
       android:paddingBottom="15dp"
       android:textColor="#E5E5DD"
       android:textSize="15sp"
       android:layout_toRightOf="@id/proj_impact_brief_desc"
       android:text="day's worth secondary education for a child in rural India."
       android:gravity="center_vertical"
       android:layout_below="@id/proj_impact" />
    
    <org.oxfamindia.oxfamindiafundraiser.CustomTextView2
        android:id="@+id/proj_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textSize="22sp"
        android:textColor="#FFF"
        android:text="About"
        android:layout_below="@id/proj_impact_brief_desc" />
    
    <org.oxfamindia.oxfamindiafundraiser.CustomTextView
       android:id="@+id/proj_brief"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingLeft="15dp"
       android:paddingRight="15dp"
       android:paddingBottom="15dp"
       android:textColor="#E5E5DD"
       android:textSize="15sp"
       android:layout_below="@id/proj_about" />
    
    <org.oxfamindia.oxfamindiafundraiser.CustomTextView2
        android:id="@+id/proj_funfact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/proj_brief"
        android:padding="15dp"
        android:textSize="22sp"
        android:textColor="#FFF"
        android:text="Did You Know?" />
    
    <org.oxfamindia.oxfamindiafundraiser.CustomTextView
       android:id="@+id/proj_funfact_info"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingLeft="15dp"
       android:paddingRight="15dp"
       android:paddingBottom="15dp"
       android:textColor="#E5E5DD"
       android:textSize="15sp"
       android:layout_below="@id/proj_funfact" />
</RelativeLayout>

</RelativeLayout>
</ScrollView>